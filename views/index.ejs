<html>
  <head>
    <link rel="stylesheet" href="../style.css" />
    <title>Mini Message Board</title>
  </head>
  <body>
    <div class="message-container">
      <% messages.forEach((message) => { %>
      <div class="message-box">
        <p class="message">Message: <%= message.text %></p>
        <p class="user">Author: <%= message.user %></p>
        <p class="date">
          Date published: <%= message.added.toLocaleDateString()%>
        </p>
      </div>
      <% }); %>
    </div>
  </body>
</html>
